{
  "version": 2,
  "builds": [
    { "src": "api/server.ts", "use": "@vercel/node" },
    { "src": "client/vite.config.ts", "use": "@vercel/static-build" },
    { "src": "vite.config.ts", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/server.ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ]
}


